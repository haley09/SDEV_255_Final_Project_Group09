<!DOCTYPE html>
<html>

<%- include('./partials/head.ejs') %>

<body>
  <main>
    <h1>Courses We Offer</h1>
    
    <%- include('./partials/nav.ejs') %>

    <div style="padding-top: 30px">
      
        <% if (courses.length > 0) { %>

          <table>
            <tr class="top-row">
              <th>Name</th>
              <th>Description</th>
              <th>Subject Area</th>
              <th>Credits</th>
            </tr>
            
          <% courses.forEach(course => { %>

              <tr>
                <td class="name"> <a href="/coursesStudent/<%= course._id%>"> <%= course.name %> </a></td>
                <td class="description"><a href="/coursesStudent/<%= course._id%>"><%= course.description %></a></td>
                <td class="subjectArea"><a href="/coursesStudent/<%= course._id%>"><%= course.subjectArea %></a></td>
                <td class="credits"><a href="/coursesStudent/<%= course._id%>"><%= course.credits %></a></td>
              </tr>
            
          <% }) %>
        <% } else { %>
            <p class="errorMessage">There are no courses to disply</p>
        <% } %>
      </table>
    </div>

    <%- include('./partials/footer.ejs') %>
  </main>
</body>

</html>