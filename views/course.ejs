<!DOCTYPE html>
<html>

<%- include('./partials/head.ejs') %>
<link rel="stylesheet" a href="/public/style.css">
<body>
  <h1>Courses We Offer</h1>
  
  <%- include('./partials/nav.ejs') %>

  <div style="padding-top: 30px">
    <table>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Subject Area</th>
        <th>Credits</th>
      </tr>
      <% if (courses.length > 0) { %>
        <% courses.forEach(course => { %>

            <tr>
              <td class="name"> <a href="/course.ejs<%= course._id%>"> <%= course.name %> </a></td>
              <td class="description"><%= course.description %></td>
              <td class="subjectArea"><%= course.subjectArea %></td>
              <td class="credits"><%= course.credits %></td>
            </tr>
          
        <% }) %>
      <% } else { %>
          <p>There are no blogs to disply</p>
      <% } %>
    </table>
  </div>

  <div>
    <a href="/create.ejs">
      <input type="submit" value="New Course">
    </a>
  </div>
</body>

</html>
